    err=$?
    restore_flags
    return $err
}

check_macro(){
    echocheck "$1"
    log check_macro "$@"
    macro=$1
    shift
    disable $macro
    check_cc "$@" <<EOF && enable $macro
#ifndef $macro
#error Macro $macro is undefined
#endif
int x;
EOF
    enabled $macro && answer="yes" || answer="no"
    echores $answer
    enabled $macro && return 0 || return 1
}

check_macro2(){
