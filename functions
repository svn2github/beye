    echocheck "$2"
    log check_class2 "$@"
    headers=$1
    class=$2
    shift 2
    disable $class
    incs=""
    for hdr in $headers; do
        incs="$incs
#include <$hdr>"
    done
    check_ldxx "$@" <<EOF && enable $class
$incs
class $class;
int main(void){
    return 0;
}
EOF
    enabled $class && answer="yes" || answer="no"
    echores $answer
    enabled $class && return 0 || return 1
}

